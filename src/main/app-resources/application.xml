<application xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" id="application">
  <jobTemplates>
    <jobTemplate id="notebook">
      <streamingExecutable>/application/notebook/run</streamingExecutable>
      <defaultParameters><parameter id="n_classes" title="Classes and ranges for NDVI" abstract="Classes and ranges for NDVI (class_1=min#max,class_2=min#max)" maxOccurs="20" scope="runtime" type="LiteralData">1=-1#0,2=0#0.1,3=0.1#0.2,4=0.2#1</parameter><parameter id="b_classes" title="Classes and ranges for BSI" abstract="Classes and ranges for BSI (class_1=min#max,class_2=min#max)" maxOccurs="20" scope="runtime" type="LiteralData">1=-1#-0.2,2=-0.2#0.1,3=0.1#0.2,4=0.2#1</parameter><parameter id="ndvi_threshold" title="NDVI threshold for the mask expression" abstract="NDVI threshold for the mask expression" maxOccurs="1" scope="runtime" type="LiteralData">0.3</parameter><parameter id="bsi_threshold" title="BSI threshold" abstract="BSI threshold" maxOccurs="1" scope="runtime" type="LiteralData">0</parameter><parameter id="aoi" title="Area of interest" abstract="Area of interest" maxOccurs="1" scope="runtime" type="LiteralData">-70.5659,-13.0922,-69.1411,-12.4567</parameter><parameter id="_T2Username" title="Ellip username" abstract="Ellip username" maxOccurs="1" scope="runtime" type="LiteralData"/><parameter id="_T2ApiKey" title="Ellip API key for data pipeline" abstract="Ellip API key for data pipeline" maxOccurs="1" scope="runtime" type="LiteralData"/></defaultParameters>
     <defaultJobconf>
        <property id="mapred.task.timeout">9900000000000</property>
         <property id="ciop.job.max.tasks">1</property> 
      </defaultJobconf>
    </jobTemplate>
  </jobTemplates>
  <workflow id="ewf-s2-vegetation-mask" title="Sentinel-2 vegetation mask based on NDVI and BSI" abstract="Sentinel-2 vegetation mask based on NDVI and BSI">
    <workflowVersion>1.0</workflowVersion>
    <node id="notebook">
      <job id="notebook"/>
      <sources>
        <source id="source" title="Input references" abstract="Input references" refid="string:list" scope="runtime"></source>
      </sources>
    </node>
  </workflow>
</application>
